{
  "name": "nft-smartcontract",
  "version": "1.0.0",
  "description": "Be[In]Crypto NFT Smartcontract",
  "scripts": {
    "clean": "rimraf build && rimraf deployments/localhost",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "typechain": "npx hardhat typechain",
    "prettier:check": "npx prettier --check --loglevel error .",
    "prettier": "npx prettier --write .",
    "lint:sol": "npx solhint -f table contracts/**/*.sol",
    "lint:ts": "npx eslint -f table .",
    "lint": "yarn lint:sol && yarn lint:ts",
    "prepare": "npx husky install",
    "pre-commit": "yarn prettier:check && npx commitlint -e"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.16",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "chai": "^4.3.6",
    "decimal.js": "^10.3.1",
    "eslint": "^8.8.0",
